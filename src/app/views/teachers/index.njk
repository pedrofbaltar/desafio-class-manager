{% extends "layout.njk" %}

{% block content %}
  <div class="card table-container">
    <table width="100%">
      <thead>
        <tr>
          <th>Nome completo</th>
          <th>Acompanhamento</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for teacher in teachers %}
          <tr>
            <td>
              <span style="background-image: url({{ teacher.avatar_url }})"></span>
              {{ teacher.name }}
            </td>
            <td>
              <span>{{ teacher.services }}</span>
            </td>
            <td>
              <a href="/teachers/{{ teacher.id }}">ver</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
    <a class="new-button" href="/teachers/create">Novo</a>
  </div>
{% endblock %}