{% extends "layout.njk" %}

{% block content %}
  <div class="card table-container">
    <div class="header">
      <form action="/teachers" method="GET">
          <input
            type="text"
            name="filter"
            placeholder="Nome ou acompanhamento"
            value="{{ filter }}"
          >
        <button type="submit">Filtrar</button>
      </form>
    </div>
    <table width="100%">
      <thead>
        <tr>
          <th>Nome completo</th>
          <th>Acompanhamento</th>
          <th>Alunos</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for teacher in teachers %}
          <tr>
            <td><span style="background-image: url({{ teacher.avatar_url }})"></span>{{ teacher.name }}</td>
            <td><span>{{ teacher.subjects_taught }}</span></td>
            <td><span>{{ teacher.total_students }}</span></td>
            <td><a href="/teachers/{{ teacher.id }}">ver</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
    <a class="new-button" href="/teachers/create">Novo</a>

    <div class="pagination"
      data-page={{pagination.page}}
      data-total={{pagination.total}}
      data-filter={{filter}}
    ></div>
  </div>
{% endblock %}