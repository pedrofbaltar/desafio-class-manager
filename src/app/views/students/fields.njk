<div class="item">
  <div>Avatar URL</div>
  <div>
    <input 
      type="url" 
      name="avatar_url" 
      placeholder="http://" 
      value="{{ student.avatar_url }}"
    >
  </div>
</div>
<div class="item">
  <div>Aluno</div>
  <div>
    <input 
      type="text" 
      name="name" 
      placeholder="Nome completo" 
      value="{{ student.name }}"
    >
  </div>
</div>
<div class="item">
  <div>Email</div>
  <div>
    <input 
      type="email" 
      name="email" 
      placeholder="Email do aluno" 
      value="{{ student.email }}"
    >
  </div>
</div>
<div class="item">
  <div>Ano escolar</div>
  <div>
    <select name="education_level" placeholder="Selecione seu grau de educação" value="{{ student.education_level }}">
      <option 
        value="5EF" 
        {% if student.education_level == '5EF' %} 
          selected
        {% endif %}>
        5º ano - Fundamental I
      </option>
      <option
        value="6EF"
        {% if student.education_level == '6EF' %} 
          selected
        {% endif %}>
        6º ano - Fundamental II
      </option>
      <option 
        value="7EF"
        {% if student.education_level == '7EF' %}
          selected
        {% endif %}>
        7º ano - Fundamental II
      </option>
      <option 
        value="8EF"
        {% if student.education_level == '8EF' %}
          selected
        {% endif %}>
        8º ano - Fundamental II
      </option>
      <option 
        value="9EF"
        {% if student.education_level == '9EF' %}
          selected
        {% endif %}>
        9º ano - Fundamental II
      </option>
      <option 
        value="1EM"
        {% if student.education_level == '1EM' %}
          selected
        {% endif %}>
        1º ano - Ensino Médio
      </option>
      <option 
        value="2EM"
        {% if student.education_level == '2EM' %}
          selected
        {% endif %}>
        2º ano - Ensino Médio
      </option>
      <option 
        value="3EM"
        {% if student.education_level == '3EM' %}
          selected
        {% endif %}>
        3º ano - Ensino Médio
      </option>
    </select>
  </div>
</div>
<div class="item">
  <div>Carga horária semanal</div>
  <div>
    <input 
      type="number" 
      name="hours" 
      value="{{ student.hours }}"
      placeholder="Em horas"
    >
  </div>
</div>
<div class="item">
  <div>Data de nascimento</div>
  <div>
    <input 
      type="date" 
      name="birth" 
      value="{{ student.birth }}"
    >
  </div>
</div>
<button type="submit">Salvar</button>
