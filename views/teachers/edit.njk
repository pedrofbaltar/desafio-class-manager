{% extends "layout.njk" %}

{% block content %}
  <div class="card">
    <section class="image"></section>
    <section class="details">
      <h3>Editar professor</h3>
      <form action="/teachers?_method=PUT" method="POST" id="form">
        <input type="hidden" name="id" value="{{ teacher.id }}">
        {% include "teachers/fields.njk"%}
      </form>

      <form action="/teachers?_method=DELETE" id="form-delete" method="POST">
        <input type="hidden" name="id" value="{{ teacher.id }}">
        <button class="delete-button" type="submit">Deletar</button>
      </form>
    </section>
  </div>
{% endblock %}
